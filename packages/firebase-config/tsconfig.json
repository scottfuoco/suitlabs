{
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": "./build",
    "target": "ESNext",
    "module": "CommonJS",
    "isolatedModules": false,
    "strict": false,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.js"]
}
